{
    "version": 3,
    "cmakeMinimumRequired": {
      "major": 3,
      "minor": 22,
      "patch": 0
    },
    "configurePresets": [
        {
            "name": "mingw64",
            "displayName": "Mingw64",
            "description": "x64 Mingw Ninja Multi-Config",
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/build/mingw64",
            "installDir": "${sourceDir}/install/mingw64",
            "toolchainFile": "${sourceDir}/cmake/mingw64.cmake",
            "cacheVariables": {
                "CMAKE_CXX_STANDARD": "20",
                "CMAKE_CXX_STANDARD_REQUIRED": "YES",
                "CMAKE_CXX_EXTENSIONS": "OFF",
                "CMAKE_CXX_FLAGS": "-Wall -Wextra -pedantic -Werror -mwindows",
                // todo: restore me "CMAKE_CXX_FLAGS_DEBUG": "-mwindows -Wall -Wextra -pedantic -O0 -g",
                "CMAKE_CXX_FLAGS_DEBUG": "-mwindows -O0 -g",
                "MINGW_USE_NATIVE_GCC": "$env{MINGW_USE_NATIVE_GCC}",
                "MINGW_GCC_LIBRARY_PATH": "$env{MINGW_GCC_LIBRARY_PATH}",
                "MINGW_PTHREAD_LIBRARY_PATH": "$env{MINGW_PTHREAD_LIBRARY_PATH}",
                "MINGW_SYSTEM_LIBRARY_PATH": "$env{MINGW_SYSTEM_LIBRARY_PATH}"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "mingw64",
            "displayName": "Mingw64",
            "configurePreset": "mingw64",
            "configuration": "Release"
        },
        {
            "name": "mingw64-debug",
            "displayName": "Mingw64 (Debug)",
            "configurePreset": "mingw64",
            "configuration": "Debug"
        }
    ]
}
